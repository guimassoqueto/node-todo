{
  "compilerOptions": {
    "rootDirs": ["src", "test"],
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES2019",
    "esModuleInterop": true,
    "allowJs": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "@src/*": ["./*"],
      "@tests/*": ["../tests/*"],
    },
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": ["src", "tests"]
}